@page
@model Employeeproject.page.employees.IndexModel
@{
}

<br />
<h2>List of employees</h2>
<a class='btn btn-primary btn-sm' href='/employees/Create'>New Employee</a>
<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Date of Birth</th>
			<th>Country</th>
			<th>State</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>

		@foreach(var item in Model.Listemployees)
		{
			<tr>

				<td>@item.first_name</td>
				<td>@item.last_name</td>
				<td>@item.email</td>
				<td>@item.dob</td>
				<td>@item.gender</td>
				<td>@item.country</td>

				<td>@item.state</td>

				<td>
					<a class="btn btn-primary btn-sm" href="/Employees/Edit?id=">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Employees/Delete?id=">Delete</a>
				</td>

			</tr>
		}

	</tbody>
</table>
